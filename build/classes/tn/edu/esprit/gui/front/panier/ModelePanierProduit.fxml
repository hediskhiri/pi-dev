<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.String?>
<AnchorPane stylesheets="@../../../tools/MainStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane layoutX="30.0" layoutY="30.0" style="-fx-background-color: white;" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="15.0">
        <HBox styleClass="border-rounded" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <VBox spacing="10.0">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
                <Text fx:id="produitNameText" text="Produit : " wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>
                <Text fx:id="quantityText" text="Quantity" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>
            <Text fx:id="unitPriceText" text="Unit price" wrappingWidth="190">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Text>
            <Text fx:id="discountText" text="Unit price" wrappingWidth="190">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Text>
            <Text fx:id="quantityText1" wrappingWidth="190">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Text>
            <Text fx:id="totalPriceText" text="Total price" wrappingWidth="190">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Text>

            </VBox>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>

            </VBox>

            <VBox>
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
                <Button fx:id="addButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="light-button" text="+">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="removeButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="light-button" text="-">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </VBox>

        </HBox>
      <styleClass>
         <String fx:value="window-rounded" />
         <String fx:value="border-dark" />
         <String fx:value="border-rounded" />
      </styleClass>
    </AnchorPane>
</AnchorPane>
